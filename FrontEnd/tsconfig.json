{
  "compilerOptions": {
    // Add these modern module settings
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "jsx": "react-jsx",
    

    // Previous fixes
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["vite/client"],
    
    // Your other settings
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true, // It's good practice to enable strict mode
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}